---
const { frontmatter } = Astro.props;
const { title, date, week } = frontmatter;
---

<html>
  <head>
    <title>{title}</title>
    <meta charset="UTF-8">
    <style>
      body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        max-width: 800px;
        padding: 1rem;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <h1>{title}</h1>
    <article>
      <slot />
    </article>
    <p><em>Published on {date}</em></p>
    <p><em>Week {week}/52</em></p>
  </body>
</html>

